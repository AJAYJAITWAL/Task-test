<%= @post.title %>
<%= @post.text %>


<h2>Add a comment:</h2>
<%= form_with model: [ @post, @post.comments.build ] do |form| %>
  <p>
    <%= form.label :description %><br>
    <%= form.text_field :description %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<% @post.comments.each do |comment| %>
    Description: <%= comment.description %>
    <br><hr>
<%end%>

<br>

<%= link_to "All post", posts_path %>